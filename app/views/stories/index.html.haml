.row
  .col-md-6
    .stories
      %h2
        = link_to 'Recent Top Hits', :controller => 'show_stories', :action => :show, :id => 0
      %table.table.table-condensed
        - @top_hits.each_with_index do |tophit, i|
          %tr
            %td
              %a(href="#{tophit.href}") #{tophit.description}
  .col-md-6
    .stories
      %ul.list-inline
        %li
          %h2
            = link_to 'Time spent at #1', :controller => 'show_top_hits', :action => :show, :id => 0
        %li.pull-right.time-frame
          %ul.list-inline
            %li.h5{:class => ('underlined' if !params.has_key?(:time_frame) || params[:time_frame] == 'week')}
              = link_to 'this week', :controller => 'stories', :action => :index, :time_frame => 'week'
            %li.h5{:class => ('underlined' if params.has_key?(:time_frame) && params[:time_frame] == 'month')}
              = link_to 'this month', :controller => 'stories', :action => :index, :time_frame => 'month'
            %li.h5{:class => ('underlined' if params.has_key?(:time_frame) && params[:time_frame] == 'alltime')}
              = link_to 'all time', :controller => 'stories', :action => :index, :time_frame => 'alltime'
      %table.table.table-condensed
        - @stories.each do |story|
          %tr
            %td.story-time
              = minutes_to_words(story.time_at_num_one)
            %td
              %a(href="#{story.href}") #{story.description}
